<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="edu.colorado.phet.website.data.PhetUser" table="phet_user">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="email"/>
        <!--Before 6-25-2010, the hashed password was called "password" instead of "hashedPassword", therefore, 
        we need this mapping to maintain compatibility with the pre-existing database entries.-->
        <property name="hashedPassword" column="password"/>
        <property name="teamMember"/>
        <property name="trustedTranslator"/>
        <property name="confirmed"/>
        <property name="newsletterOnlyAccount"/>
        <set name="translations" table="user_translation_mapping">
            <key column="user_id"/>
            <many-to-many class="edu.colorado.phet.website.data.Translation" column="translation_id"/>
        </set>
        <property name="name"/>
        <property name="organization"/>
        <property name="description"/>
        <property name="jobTitle"/>
        <property name="address1"/>
        <property name="address2"/>
        <property name="city"/>
        <property name="state"/>
        <property name="country"/>
        <property name="zipcode"/>
        <property name="phone1"/>
        <property name="phone2"/>
        <property name="fax"/>
        <property name="confirmationKey"/>
        <property name="receiveEmail"/>
        <property name="receiveWebsiteNotifications"/>
        <property name="receiveSimulationNotifications"/>

        <property name="teacher"/>
        <property name="student"/>
        <property name="researcher"/>
        <property name="translator"/>
        <property name="otherRole"/>
        <property name="otherRoleText"/>

        <property name="generalScience"/>
        <property name="earthScience"/>
        <property name="biology"/>
        <property name="physics"/>
        <property name="chemistry"/>
        <property name="astronomy"/>
        <property name="math"/>
        <property name="otherSubject"/>
        <property name="otherSubjectText"/>

        <property name="elementary"/>
        <property name="middle"/>
        <property name="high"/>
        <property name="university"/>
        <property name="gradeK"/>
        <property name="grade1"/>
        <property name="grade2"/>
        <property name="grade3"/>
        <property name="grade4"/>
        <property name="grade5"/>
        <property name="grade6"/>
        <property name="grade7"/>
        <property name="grade8"/>
        <property name="grade9"/>
        <property name="grade10"/>
        <property name="grade11"/>
        <property name="grade12"/>
        <property name="year1"/>
        <property name="year2plus"/>
        <property name="graduate"/>
        <property name="otherGrade"/>

        <property name="yearsTeaching"/>
    </class>
</hibernate-mapping>